<h1>Lets create a review for <%= @restaurant.name %>...</h1>

<%= form_for([@restaurant, @review]) do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.label :rating %>
  <%= f.select :rating, options_for_select(1..5)%>
  <%= f.submit %>
<% end %>

 <%= link_to "Back to the details...", restaurant_path(@restaurant), class: "btn btn-primary"%>
